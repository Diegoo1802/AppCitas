<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/color_background">

    <!-- Imagen de perfil -->
    <ImageView
        android:id="@+id/img_perfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/pepe"
        android:background="@color/color_secondary"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp" />

    <!-- Nombre -->
    <TextView
        android:id="@+id/txt_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:textSize="18sp"
        android:textColor="@color/color_text_dark"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <!-- Correo electrónico -->
    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="18sp"
        android:textColor="@color/color_text_dark"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <!-- Contraseña -->
    <TextView
        android:id="@+id/txt_contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña: "
        android:textSize="18sp"
        android:textColor="@color/color_text_dark"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Botón para borrar la cuenta -->
    <Button
        android:id="@+id/btn_borrar_cuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Borrar Cuenta"
        android:backgroundTint="@color/colorButtonSecondary"
        android:textColor="@color/color_white"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="8dp" />

    <!-- Botón para volver al menú -->
    <Button
        android:id="@+id/btn_volver_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver al Menú"
        android:backgroundTint="@color/colorButtonPrimary"
        android:textColor="@color/color_white"
        android:layout_marginTop="8dp"
        android:elevation="2dp" />
</LinearLayout>
